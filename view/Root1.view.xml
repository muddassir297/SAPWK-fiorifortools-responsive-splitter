          <Text text="3 open TODOs" textAlign="Center" width="100%"/>
          <Text text="Updated 2 weeks ago" textAlign="Center" width="100%"/>
        </l:BlockLayoutCell>
        <l:BlockLayoutCell title="Tool Header" titleAlignment="Center">
          <Text text="3 open TODOs" textAlign="Center" width="100%"/>
          <Text text="Updated 3 weeks ago" textAlign="Center" width="100%"/>
        </l:BlockLayoutCell>
      </l:BlockLayoutRow>
    </l:BlockLayout>

    <l:BlockLayout>
      <l:BlockLayoutRow>
        <l:BlockLayoutCell title="Urgent TODOs">
        </l:BlockLayoutCell>
      </l:BlockLayoutRow>
    </l:BlockLayout>

    <l:BlockLayout background="Dashboard">
      <l:BlockLayoutRow>
        <l:BlockLayoutCell title="Implement Logout" titleAlignment="Center">
          <Text text="Jira Task PAGE-5" textAlign="Center" width="100%"/>
          <Text text="Deadline 16.02.2017" textAlign="Center" width="100%"/>
        </l:BlockLayoutCell>
        <l:BlockLayoutCell title="Customize Menu Items" titleAlignment="Center">
          <Text text="Jira Task NAVIGATION-1" textAlign="Center" width="100%"/>
