          <Text text="Jira Task SPLITER-3" textAlign="Center" width="100%"/>
          <Text text="Deadline 17.02.2017" textAlign="Center" width="100%"/>
        </l:BlockLayoutCell>
        <l:BlockLayoutCell title="Bind to real User" titleAlignment="Center">
          <Text text="Jira Task HEADER-2" textAlign="Center" width="100%"/>
          <Text text="Deadline 19.02.2017" textAlign="Center" width="100%"/>
        </l:BlockLayoutCell>
      </l:BlockLayoutRow>
    </l:BlockLayout>
